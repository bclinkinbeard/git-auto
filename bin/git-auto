#!/usr/bin/env node --harmony

/**
 * Dependencies.
 */

var program = require('commander');
var auto = require('..');

/**
 * Program.
 */

program
  .version('0.0.1')
  .option('-p, --push', 'Push to remote repository after generating commits')
  .parse(process.argv);
  
/**
 * Options.
 */

var opts = {};
if (program.push) opts.push = true;

/**
 * Run.
 */

auto(opts);